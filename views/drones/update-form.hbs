<h2>Update the drone</h2>

<form action="/drones/{{_id}}/edit" method="POST">

  <label for="dronName-input">Dron name:</label>
  <input type="text" name="name" id="dronName-input" value="{{name}}"/>

  <label for="propellers-input">Propellers:</label>
  <input type="number" name="propellers" id="rate-input" value="{{propellers}}" />

  <label for="maxSpeed-input">Maximum speed:</label>
  <input type="number" name="maxSpeed" id="maxSpeed-input" min="1" max="18" value="{{maxSpeed}}"/>

  <button type="submit">Update</button>

</form>